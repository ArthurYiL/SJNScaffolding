                $.ajax({
                    url: '/TableSettings?handler=ImportTable',
                    type: 'post',
                    data: data.field,
                    dataType: 'json',
                    success: function (d) {

                        if (d.code == 0) {
                            loadGrid(d.data);
                        } else {
                            layer.msg('error');
                        }
                    }
                });
                return false;
            });

        layui.form.on('submit(demoData)',
